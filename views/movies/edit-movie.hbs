<h2>Editar Película</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <label for="title">Título:</label>
  <input type="text" name="title" id="title" value="{{movie.title}}" required>

  <label for="genre">Género:</label>
  <input type="text" name="genre" id="genre" value="{{movie.genre}}" required>

  <label for="plot">Argumento:</label>
  <textarea name="plot" id="plot" required>{{movie.plot}}</textarea>

  <label for="cast">Elenco:</label>
  <select name="cast" id="cast" multiple required>
    {{#each celebrities}}
    <option value="{{this._id}}" {{#if movie.cast.includes this._id}}selected{{/if}}>{{this.name}}</option>
    {{/each}}
  </select>

  <button type="submit">Guardar Cambios</button>
</form>
